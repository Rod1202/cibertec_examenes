@model EstudiantesViewModel;
@{
    ViewData["Title"] = "Add";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Formulario de Edición</title>
    <!-- Agrega el enlace a la biblioteca Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <!-- Enlace a los estilos del componente datepicker -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
</head>
<body>

    <div class="container mt-3">
        <div class="container mt-3 d-flex justify-content-center">
            <img src="https://i.postimg.cc/4dZv94WB/Logo-Banner.jpg" class="img-fluid" alt="Imagen random">
        </div>

        <h2>Agregar Estudiante</h2>

        <div class="row">
            <!-- Formulario de edición -->
            <div class="col-md-8">
                <form asp-action="AddSavedAction" method="POST">
                    <!-- Campos del formulario -->
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input type="text" asp-for="Name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input type="text" asp-for="LastName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="DNI"></label>
                        <input type="text" asp-for="DNI" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthDate"></label>
                        <div class="input-group mb-3">
                            <input type="text" asp-for="BirthDate" class="form-control" id="datepicker" placeholder="Fecha de Nacimiento">
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="fa fa-calendar"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="text" asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone"></label>
                        <input type="text" asp-for="Phone" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Contact"></label>
                        <input type="text" asp-for="Contact" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactNumber"></label>
                        <input type="text" asp-for="ContactNumber" class="form-control">
                    </div>
                    <!-- Agrega los demás campos aquí -->
                    <!-- Botones de acción -->
                    <button class="btn btn-warning btn-sm mr-2">Agregar</button>
                    <a class="btn btn-danger btn-sm" asp-action="List" asp-controller="Estudiantes">Volver</a>
                </form>
            </div>

            <!-- Vista previa del avatar en la parte derecha -->
            <div class="col-md-4">
                <div class="text-center">
                    <img src="https://i.postimg.cc/Dzk9NDvR/Avatar-Estudiante.jpg" class="img-fluid rounded-circle" alt="Vista previa del avatar">
                    <p class="mt-2">Vista previa del avatar</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Agrega el enlace a la biblioteca Bootstrap JS y Popper.js (necesario para algunos componentes de Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <!-- Enlace al script del componente datepicker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

    <script>
        // Inicializar el componente datepicker
        $(document).ready(function () {
            $('#datepicker').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>

</body>
</html>


